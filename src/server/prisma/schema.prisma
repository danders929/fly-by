// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  profile  Pilot[]
}

model Pilot {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  userId       Int      @unique
  flights      Flight[] @relation("FlightPilots")
  flightsAsPic Flight[] @relation("FlightPic")
  flightsAsSic Flight[] @relation("FlightSic")
  user         User     @relation(fields: [userId], references: [id])
}

model Flight {
  id              Int          @id @default(autoincrement())
  solo            Boolean
  picId           Int
  sicId           Int?
  aircraftId      Int
  date            DateTime
  departure       String
  arrival         String
  engineStartTime DateTime
  engineStopTime  DateTime?
  FlightTimes     FlightTime[]
  pilots          Pilot[]      @relation("FlightPilots")
  pic             Pilot        @relation("FlightPic", fields: [picId], references: [id])
  sic             Pilot?       @relation("FlightSic", fields: [sicId], references: [id])
  aircraft        Aircraft     @relation(fields: [aircraftId], references: [id])
}

model FlightTime {
  id          Int       @id @default(autoincrement())
  flightId    Int
  timeStart   DateTime
  timeStop    DateTime?
  dayFlight   Boolean
  nightFlight Boolean
  flight      Flight    @relation(fields: [flightId], references: [id])
}

model Aircraft {
  id           Int      @id @default(autoincrement())
  makeModel    String
  tailNum      String
  singleEngine Boolean
  hobbs        Float
  flights      Flight[]
}
